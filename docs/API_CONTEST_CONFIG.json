{
  "openapi": "3.0.0",
  "info": {
    "title": "대회 시간 설정 API",
    "description": "대회 시작/종료 시간을 DB에서 동적으로 관리하기 위한 API",
    "version": "1.0.0",
    "contact": {
      "name": "MJSEC-MJU",
      "url": "https://github.com/MJSEC-MJU/MSG_CTF_BACK"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/api",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Contest Config",
      "description": "대회 시간 설정 관련 API"
    }
  ],
  "paths": {
    "/contest-time": {
      "get": {
        "tags": ["Contest Config"],
        "summary": "대회 시간 조회",
        "description": "대회의 시작/종료 시간과 현재 서버 시간을 조회합니다.",
        "operationId": "getContestTime",
        "security": [],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContestTimeResponse"
                },
                "example": {
                  "startTime": "2025-03-29 10:00:00",
                  "endTime": "2025-03-29 22:00:00",
                  "currentTime": "2025-10-13 15:30:45"
                }
              }
            }
          },
          "404": {
            "description": "대회 설정을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "httpStatus": "NOT_FOUND",
                  "description": "대회 설정을 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    },
    "/admin/contest-time": {
      "put": {
        "tags": ["Contest Config"],
        "summary": "대회 시간 설정 (관리자)",
        "description": "관리자가 대회의 시작/종료 시간을 설정하거나 변경합니다.",
        "operationId": "updateContestTime",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContestTimeRequest"
              },
              "example": {
                "startTime": "2025-03-29 10:00:00",
                "endTime": "2025-03-29 22:00:00"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContestTimeUpdateResponse"
                },
                "example": {
                  "message": "대회 시간 설정 성공",
                  "data": {
                    "id": 1,
                    "startTime": "2025-03-29 10:00:00",
                    "endTime": "2025-03-29 22:00:00",
                    "isActive": true
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "httpStatus": "BAD_REQUEST",
                  "description": "잘못된 요청입니다."
                }
              }
            }
          },
          "401": {
            "description": "인증되지 않음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "httpStatus": "UNAUTHORIZED",
                  "description": "인증이 필요합니다."
                }
              }
            }
          },
          "403": {
            "description": "권한 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "httpStatus": "FORBIDDEN",
                  "description": "권한이 없습니다."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT 토큰을 사용한 인증"
      }
    },
    "schemas": {
      "ContestTimeResponse": {
        "type": "object",
        "required": ["startTime", "endTime", "currentTime"],
        "properties": {
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 시작 시간 (yyyy-MM-dd HH:mm:ss)",
            "example": "2025-03-29 10:00:00"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 종료 시간 (yyyy-MM-dd HH:mm:ss)",
            "example": "2025-03-29 22:00:00"
          },
          "currentTime": {
            "type": "string",
            "format": "date-time",
            "description": "현재 서버 시간 (yyyy-MM-dd HH:mm:ss)",
            "example": "2025-10-13 15:30:45"
          }
        }
      },
      "ContestTimeRequest": {
        "type": "object",
        "required": ["startTime", "endTime"],
        "properties": {
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 시작 시간 (yyyy-MM-dd HH:mm:ss)",
            "example": "2025-03-29 10:00:00"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 종료 시간 (yyyy-MM-dd HH:mm:ss)",
            "example": "2025-03-29 22:00:00"
          }
        }
      },
      "ContestTimeUpdateResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "응답 메시지",
            "example": "대회 시간 설정 성공"
          },
          "data": {
            "$ref": "#/components/schemas/ContestConfig"
          }
        }
      },
      "ContestConfig": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "대회 설정 ID",
            "example": 1
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 시작 시간",
            "example": "2025-03-29 10:00:00"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "대회 종료 시간",
            "example": "2025-03-29 22:00:00"
          },
          "isActive": {
            "type": "boolean",
            "description": "활성화 여부",
            "example": true
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "httpStatus": {
            "type": "string",
            "description": "HTTP 상태",
            "example": "NOT_FOUND"
          },
          "description": {
            "type": "string",
            "description": "에러 설명",
            "example": "대회 설정을 찾을 수 없습니다."
          }
        }
      }
    }
  }
}
